{
    "name": "Hellish Rebuke",
    "description": "You point your finger at a creature and they are momentarily surrounded by flames.",
    "type": "origins:multiple",
    "badges": [
        {
            "type": "origins:keybind",
            "sprite": "origins:textures/gui/badge/active.png",
            "text": "Active ability. Use %s for long-range, sneak and right-click an entity for short-range."
        }
    ],
    "resource": {
        "type": "origins:resource",
        "min": 0,
        "max": 200,
        "start_value": 0,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
            "bar_index": 15,
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_resource",
                "comparison": "<",
                "compare_to": 200
            }
        }
    },
    "charge": {
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_resource",
            "change": 1
        }
    },
    "short": {
        "type": "origins:action_on_entity_use",
        "bientity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:target_action",
                    "action": {
                        "type": "origins:set_on_fire",
                        "duration": 5
                    }
                },
                {
                    "type": "origins:actor_action",
                    "action": {
                        "type": "origins:change_resource",
                        "resource": "*:*_resource",
                        "operation": "set",
                        "change": 0
                    }
                }
            ]
        },
        "item_condition": {
            "type": "origins:empty"
        },
        "hands": [
            "main_hand"
        ],
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_resource",
                    "comparison": "==",
                    "compare_to": 200
                },
                {
                    "type": "origins:sneaking"
                }
            ]
        }
    },
    "long": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:raycast",
                    "shape_type": "visual",
                    "fluid_handling": "none",
                    "bientity_action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:target_action",
                                "action": {
                                    "type": "origins:set_on_fire",
                                    "duration": 5
                                }
                            },
                            {
                                "type": "origins:actor_action",
                                "action": {
                                    "type": "origins:change_resource",
                                    "resource": "*:*_resource",
                                    "operation": "set",
                                    "change": 0
                                }
                            }
                        ]
                    },
                    "distance": 15
                }
            ]
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_resource",
            "comparison": "==",
            "compare_to": 200
        },
        "key": {
            "key": "key.origins.primary_active"
        }
    }
}